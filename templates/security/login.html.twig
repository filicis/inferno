{% extends 'base.html.twig' %}

{% block title %}Inferno Login{% endblock title %}

{% block body %}

<div class= 'd-flex justify-content-center'>
	<div class= 'card w-50 bg-light mb-3 center'>
  	<div class= 'card-body'>

      {{ form_start(our_form) }}

				{% if error %}
    			<div class="alert alert-danger" role="alert" >
    				Login fejl: {{ error.messageKey|trans(error.messageData, 'security') }}
    			</div>
				{% endif %}
    		<h1 class="card-title">Please sign in</h1>


      {{ form_row(our_form._username)}}
      {{ form_row(our_form._password)}}

      {{ form_widget(our_form) }}

      <div class="form-group row">
        <div class="col-2"></div>
          <div class="col">
                <input type="submit" value="Send" class="btn btn-success" />
          </div>
      </div>
      {{ form_end(our_form) }}



		</div>
	</div>
</div>

{% endblock %}