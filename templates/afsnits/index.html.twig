{% extends 'base.html.twig' %}

{% block title %}Inferno: {% endblock %}

{% block body %}

  <div class="container-xl">
    <h1 class="text-center">{{ afsnit.navn }}</h1>
    <div class="row text-center">

      {#
          Her kommer en oversigt over afsnittes sengepladser med samt indlagte patienter
          - Skal sorteres efter sengepladser
          - Patienter som endnu ikke er allokeret en seng skal stå sidst..
      #}

      <div class="col-xl-4 bg-light">
        <h6 class="alert alert-success text-left">Patient Oversigt</h6>

        {% for key,item in indlagte %}
				  <div class="row small">
         	  <div class="col-2 text-left">
						  <a class="disabled" href="#">{{ key }}</a>
						</div>
						<div class="col-10 text-left bg-secondary">
						  {% if item %}
 							  {# <a class= "" href="{{ url('ny_note') }}">{{ item }}</a> #}
 							  <button type='button' class="btn btn-link" data-target="#carouselExampleControls" data-slide-to="3">
 							    {{ item }}</button>
 						  {% endif %}
 						</div>
          </div>


        {% endfor %}
  <p>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide-to="3">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
  </p>

    	</div>

    	<div class="col-xl-8">

{# Caousel Test Start#}

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    {% for key,item in indlagte %}
        <div class="carousel-item {% if loop.first %} active {% endif %}">
		   <h6 class="alert alert-info text-left">CPR: 011244-2048 - Navn: Tove Jensen - Afd: A1</h6>

    	  <form class="row">
    	    {% for key1,item1 in mydata %}
            <!-- div class= "form-group" -->
            <div class="col-sm-2 text-right">
              <label for="{{ key1 }}">{{ key1 }}</label>
            </div>
            <div class="col-sm-10">
              <textarea class="form-control" id="{{ key1 }}" inputstl rows="1">{{item1}}</textarea>
					  </div>
            <!-- /div -->
          {% endfor %}
        </form>


      </div>
     {% endfor %}
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

